        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JourneyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientID)
            </td>
